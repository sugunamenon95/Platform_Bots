{
    "env": {
        "node": true
    },
    "rules": {
        "block-spacing": 2,
        "brace-style": [2, "1tbs", {
            "allowSingleLine": false
        }],

        "indent": [2, 4, {
            "SwitchCase": 1
        }],
        "key-spacing": 2,
        "no-dupe-args": 2,
        "no-dupe-keys": 2,
        "no-extra-semi": 2,
        "no-mixed-spaces-and-tabs": 2,
        "no-unused-vars": 1,
        "no-warning-comments": 1,
        "one-var": [2, {
            "uninitialized": "always",
            "initialized": "never"
        }],
        "quote-props": [2, "consistent"],
        "semi": 2,
        "semi-spacing": 2,
        "space-after-keywords": 2,
        "space-before-blocks": 2,
        "space-before-function-paren": [2, "never"],
        "space-before-keywords": 2,
        "space-in-parens": 2,
        "space-infix-ops": 2,
        "space-return-throw-case": 2,
        "space-unary-ops": 2
    }
}
